<% if @item.errors.any? %>
  <div class="panel panel-warning errors">
    <div class="panel-heading">
      <h5><i class="glyphicon glyphicon-exclamation-sign"></i> Found errors while saving</h5>
    </div>

    <ul class="panel-body">
      <% item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @item do |i|%>

<div class = "form-group">
<div class="col-sm-10">
<%= i.label :name %>:
<%= i.text_field :name %><br />
</div>


<div class = "form-group">
<div class="col-sm-10">
<%= i.label :description %>:
<%= i.text_field :description %><br />
</div>

<div class = "form-group">
<div class="col-sm-10">
<%= i.label :category %>:
<%= i.text_field :category %><br />
</div>

<div class = "form-group">
<div class="col-sm-10">
<%= i.label :size %>:
<%= i.text_field :size %><br />
</div>

<div class = "form-group">
<div class="col-sm-10">
<%= i.label :price %>:
<%= i.text_field :price %><br />
</div>

<div class = "form-group">
<div class="col-sm-10">
<%= i.label :image %>
<%= i.file_field :image, class: 'form-control'%>

<%= i.submit 'Upload', class: 'btn btn-primary' %>
<% end %>